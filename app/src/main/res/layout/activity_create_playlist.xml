<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CreatePlaylistIF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292424"
    android:backgroundTintMode="screen"
    android:textAlignment="center"
    tools:context=".CreatePlaylist">

    <EditText
        android:id="@+id/EnterHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter Here"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/PlaylistName"
        android:textAlignment="center"
        android:textColorHint="#B68F8F"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterPlnameHere" />

    <TextView
        android:id="@+id/EnterPlnameHere"
        android:layout_width="305dp"
        android:layout_height="0dp"
        android:layout_marginTop="136dp"
        android:text="@string/EnternameHere"
        android:textColor="#f44336"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:backgroundTint="#f44336"
        android:text="@string/CancelBtn"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rename"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterHere"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="@string/CreateBtn"
        android:textColor="#f44336"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/CancelBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/CancelBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>