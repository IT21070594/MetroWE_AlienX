<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1A1A"
    tools:context=".UploadNewSong">

    <TextView
        android:id="@+id/songName"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/songName"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:id="@+id/songNameInput"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="@string/SongNameHint"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="#F3EDED"
        android:textColorHint="#B3A8A8" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/genre"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:layout_below="@+id/songName"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:id="@+id/genreInput"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="@string/genreInput"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="#F3EDED"
        android:textColorHint="#B3A8A8"
        android:textSize="18sp"
        android:layout_below="@+id/songNameInput"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/lang"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/lang"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:layout_below="@+id/genre"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:id="@+id/langInput"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="@string/langInput"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="#F3EDED"
        android:textColorHint="#B3A8A8"
        android:layout_below="@+id/genreInput"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/photo"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/photo"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:layout_below="@+id/lang"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/photoInput"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_add_a_photo"
        android:scaleType="centerCrop"
        android:layout_below="@id/langInput"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/audio"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="132dp"
        android:text="@string/audio"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:layout_below="@id/photo"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/audioInput"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:onClick="chooseAudio"
        android:drawableStart="@android:drawable/stat_sys_headset"
        android:drawableEnd="@android:drawable/ic_menu_upload"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/audioInput"
        android:textColor="#B3A8A8"
        android:textSize="18sp"
        android:layout_below="@id/photoInput"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#880E04"
        android:text="@string/cancelBtn"
        android:layout_above="@id/bottom_navigation"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#04146A"
        android:text="@string/submitBtn"
        android:layout_above="@id/bottom_navigation"
        android:layout_alignParentRight="true"
        android:onClick="storeSong"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/black"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>